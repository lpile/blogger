
<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title, required: true %>
  </p>
  <p>
    <%= f.label :body, "Body" %><br />
    <%= f.text_area :body, required: true %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
